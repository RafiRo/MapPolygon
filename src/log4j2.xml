<?xml version="1.0" encoding="UTF-8" ?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <File name="FILE" fileName="C:/Taldor Project/Dump/TaldorLogFile.log" append="true">
            <PatternLayout pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </File>
  
    </Appenders>

    <Loggers>
        <Logger name="Taldor project" level="debug"/>

        <Root level="debug">
          
